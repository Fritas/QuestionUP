<!DOCTYPE html>
<html lang="pt-br">
  <head>
    {% block head %}
      <title>{% block title %}{% endblock %}</title>
    {% endblock head %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script>window.jQuery || document.write('<script src="{{ url_for('static', filename='jquery.min.js') }}">\x3C/script>')</script>
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/base.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/materialize.css') }}">
    
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.0/js/materialize.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <script type='text/JavaScript'>
    $(document).ready(function() {
    $('select').material_select();
    $(".button-collapse").sideNav();
    });
    </script>

  </head>
  <body>

    <ul id="quizdropdown" class="dropdown-content">
      <li><a href="{{ url_for('categoria_escolhida', categoria = 'enem') }}">ENEM</a></li>
      <li><a href="{{ url_for('categoria_escolhida', categoria = 'cfoav') }}">CFOAV</a></li>
      <li><a href="{{ url_for('categoria_escolhida', categoria = 'detran') }}">DETRAN</a></li>
    </ul>
    
    <ul id="quizdropdown2" class="dropdown-content">
      <li><a href="{{ url_for('categoria_escolhida', categoria = 'enem') }}">ENEM</a></li>
      <li><a href="{{ url_for('categoria_escolhida', categoria = 'cfoav') }}">CFOAV</a></li>
      <li><a href="{{ url_for('categoria_escolhida', categoria = 'detran') }}">DETRAN</a></li>
    </ul>

      <nav class="#33691e light-green darken-4">
        <div class="nav-wrapper row">
          <a href="{{ url_for('index') }}" class="brand-logo left">QuestionUp</a>
          <a href="" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><a class="center-align white-text">
              {% if current_user.nome %}
                Olá {{ current_user.nome }}, seu recorde é {{ current_user.recorde }}
              {% endif %}</a></li>
              <li><a href="{{ url_for('index') }}">Inicio</a></li>
              {% if current_user.nome %}
                <li><a class="dropdown-button" href="" data-activates="quizdropdown2">Jogar</a></li>
                {% if current_user.perm_acesso == 1 %}
                  <li><a href="{{ url_for('enviar') }}">Adicionar Questões</a></li>
                {% endif %}
                <li><a href="{{ url_for('ranking') }}">Ranking</a></li>
                <li><a href="{{ url_for('sair') }}">Sair</a></li>
              {% else %}
                <li><a href="{{ url_for('entrar') }}">Entrar</a></li>
                <li><a href="{{ url_for('registrar') }}">Registrar</a></li>
              {% endif %}
          </ul>
          <ul id="mobile-demo" class="side-nav">
            <li><a class="center-align teal-text text-darken-4" href="{{ url_for('ranking') }}">
              {% if current_user.nome %}
                Olá {{ current_user.nome }}, seu recorde é {{ current_user.recorde }}
              {% endif %}
            </a></li>
            <li class="active"><a href="{{ url_for('index') }}">Inicio</a></li>
            <li><a class="dropdown-button" href="" data-activates="quizdropdown">Jogar</a></li>
            <li><a href="{{ url_for('enviar') }}">Adicionar Questões</a></li>
            <li><a href="{{ url_for('ranking') }}">Ranking</a></li>
            {% if current_user.nome %}
              <li><a href="{{ url_for('sair') }}">Sair</a></li>
            {% else %}
              <li><a href="{{ url_for('entrar') }}">Entrar</a></li>
              <li><a href="{{ url_for('registrar') }}">Registrar</a></li>
            {% endif %}
          </ul>
        </div>
      </nav>

      <!-- Template Filho (que será expandido) -->
      {% block content %}{% endblock %}
      <br>

      <!-- Erros -->
      {% if error %}
        <p class="erro"><strong>Erro:</strong>{{ erro }}</p>
      {% endif %}

      <!-- Mensagens mostradas -->
      {% for mensagem in get_flashed_messages() %}
        <ul><li>{{ mensagem }}</li></ul>
      {% endfor %}

  </body>
</html>
