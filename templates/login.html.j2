{% extends "base.html.j2" %}
{% block head %}

	<!--Let browser know website is optimized for mobile-->
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
	<!-- JQUERY import -->

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	<script>window.jQuery || document.write('<script src="{{ url_for('static', filename='js/jquery.min.js') }}">\x3C/script>')</script>

	<script type='text/javascript'>

		$(document).ready(function() {
			//sets the global variable to the prefix to the root of the application
			$SCRIPT_ROOT = {{ request.script_root|tojson|safe }};
			$(".button-collapse").sideNav();
		});
	</script>
	<!-- Materialize -->
	<!-- Compiled and minified CSS -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.0/css/materialize.min.css">
	<!-- Compiled and minified JavaScript -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.0/js/materialize.min.js"></script>
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet">


	<link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/base.css') }}">

	<title>Entrar</title>
{% endblock head %}
{% block content %}

<h5 class="center-align">Entrar</h5>
<br>
<div class="card-panel">
<form action="" method='POST'>
	{{ form.csrf_token }}
	<div class="row">
		<div class="col s6 input-field">
			{{ form.usuario(placeholder="Usuário", class="validate") }}
			<label for="usuario">Usuário</label>
			<span class="error">
				{% if form.usuario.errors %}
					{% for erro in form.usuario.errors %}
						{{ erro }}
					{% endfor %}
				{% endif %}
			</span>
		</div>
	</div>
	<div class="row">
		<div class="col s6 input-field">
			{{ form.senha(placeholder="Senha", class="validate") }}
			<label for="senha" data-error="wrong" data-success="right">Senha</label>
			<span class="error">
				{% if form.senha.errors %}
					{% for erro in form.senha.errors %}
						{{ erro }}
					{% endfor %}
				{% endif %}
			</span>
		</div>
	</div>
	<div class="valign-wrapper">
		<button class="valign #33691e light-green darken-4 lighten-2 btn waves-effect waves-green" type="submit"> Entrar</button>
	</div>
</form>
</div>
{% endblock content %}
