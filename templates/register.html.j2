{% extends "base.html.j2" %}
{% block head %}
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.0/css/materialize.min.css">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.0/js/materialize.min.js"></script>
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet">
	<title>Registrar</title>
{% endblock head %}
{% block content %}

<h5 class="center-align">Registrar</h5>
<br>
<form action="" method='POST'>
	{{ form.csrf_token }}
	<div class="row">
		<div class="input-field col s6">
			<label for="nome">Nome:</label>
			{{ form.nome() }}
			<span class="error">
				{% if form.nome.errors %}
					{% for erro in form.nome.errors %}
						{{ erro }}
					{% endfor %}
				{% endif %}
			</span>
		</div>
	</div>
	<div class="row">
		<div class="input-field col s6">
			{{ form.usuario() }}
			<label for="usuario">Usu√°rio:</label>
			<span class="error">
				{% if form.usuario.errors %}
					{% for erro in for.usuario.errors %}
						{{ erro }}
					{% endfor %}
				{% endif %}
			</span>
		</div>
	</div>
	<div class="row">
		<div class="input-field col s6">
			{{ form.senha(class="validate") }}
			<label for="senha">Senha:</label>
			<span class="error">
				{% if form.senha.errors %}
					{% for erro in form.senha.errors %}
						{{ erro }}
					{% endfor %}
				{% endif %}
			</span>
		</div>
	</div>
	<div class="row">
		<div class="input-field col s6">
			<label for="confirmacao">Confirmar senha:</label>
			{{ form.confirmacao() }}
			<span class="error">
				{% if form.confirmacao.errors %}
					{% for erro in form.confirmacao.errors %}
						{{ erro }}
					{% endfor %}
				{% endif %}
			</span>
		</div>
	</div>
	<div class="valign-wrapper">
	<button class="btn #33691e light-green darken-4 valign lighten-2 waves-effect waves-greeen" type="submit">Registrar!</button>
</div>
</form>
{% endblock content %}
